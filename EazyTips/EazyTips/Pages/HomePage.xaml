<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EazyTips.Pages.HomePage"
            x:Name="Home">
  <!--Pages can be added as references or inline-->
    <ContentPage Title="Мой код">
        <StackLayout>
            <Image HorizontalOptions="Center"/>
            <Label Text="Name" TextColor="Black" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Image HorizontalOptions="Center"/>
            <Entry Text="URL" IsReadOnly="True" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage>
    <ContentPage Title="Баланс">
        <ScrollView>
            <StackLayout>
                <Frame BackgroundColor="#cc5ce6">
                    <Image HorizontalOptions="Center"/>
                </Frame>
                <Frame BackgroundColor="White">
                    <Label Text="Transaction" FontSize="Medium"/>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage>
    <ContentPage Title="Отзывы">
        <ScrollView>
            <StackLayout>
                <Label Text="Отзывы" FontSize="Title"/>
            </StackLayout>
        </ScrollView>
    </ContentPage>
    <ContentPage Title="Профель">
        <ScrollView>
            <StackLayout>
                <Frame BackgroundColor="#cc5ce6">
                    <Label Text="Name" TextColor="White" FontAttributes="Bold" FontSize="Medium" 
                           HorizontalOptions="Center"/>
                </Frame>
                <Frame BackgroundColor="White">
                    <Button Text="Exit" Clicked="Exit_ButtonClicked" TextColor="Black" FontSize="Medium" HorizontalOptions="CenterAndExpand"/>
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentPage>
</TabbedPage>